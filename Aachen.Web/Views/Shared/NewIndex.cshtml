@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en" ng-app="aachen.app">
<head>
    <meta charset="utf-8">
    <title>Лангуст - лучшие анекдоты</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="~/Content/css/aachen-new.css" rel="stylesheet" />
</head>
    
<body ng-controller="BaseController">
    <div id="inner-wrap">
    <header id="flyout-container">
        <ul class="main-menu nav flyout">
            <li class="menu"><a class="icon-reorder" href="#"></a></li>
            <li class="logo"><a class="brand" data-turbo-target="body-container" href="/"><img alt="Header_logo.v2" src="http://rack.1.mshcdn.com/assets/header_logo.v2-30574d105ad07318345ec8f1a85a3efa.png"></a></li>
            <li class="collapsable channel submenu"><a href="/">Новые</a></li>
            <li class="collapsable channel submenu"><a href="/toprated">Лучшие</a></li>
            <li class="collapsable channel submenu"><a href="/featured">Избранное</a></li>
            <li class="collapsable channel submenu"><a href="/categories">По категориям</a></li>
        </ul>
    </header>

    
    <header id="site-header">
        <div class="navbar">
            <div class="navbar-inner">
                <ul class="main-menu nav inline">
                    <li class="menu"><a class="icon-reorder" href="#"></a></li>
                    <li class="logo"><a class="brand" href="/"><span>Лангуст</span></a></li>

                    <li class="separator-right" ng-class="{ active: activePath=='/' }"><a href="/">Новые</a></li>
                    <li class="separator-right" ng-class="{ active: activePath=='/toprated' }"><a href="/toprated">Лучшие</a></li>
                    <li class="separator-right" ng-class="{ active: activePath=='/featured' }"><a href="/featured">Избранное</a></li>
                    <li class="separator-right" ng-class="{ active: activePath=='/categories' || activePath=='/bycategory' }"><a href="/categories">По категориям</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div id="main" role="main">
        <div class="container">
            <div class="aachen-content">
                <ng:view></ng:view>
            </div>
        </div>
    </div>

    <hr>
    <footer>
        <div id="aachen-loading">
            <img alt="Loading..." src="../../content/images/loading.gif">
            <div>Загрузка...</div>
        </div>
    </footer>
    </div>
    <script src="~/Content/js/loader.js"></script>
</body>
</html>






